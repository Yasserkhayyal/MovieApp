<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content" android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/play_back_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:src="@drawable/playback_play"/>

    <TextView
        android:id="@+id/trailer_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/play_back_image"
        android:layout_alignTop="@+id/play_back_image"
        android:layout_marginLeft="50dp"
        android:text="trailer"
        android:textSize="?android:attr/textAppearanceMedium"
        android:textColor="@color/black"/>


</RelativeLayout>